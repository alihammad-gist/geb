{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"jsx": "preserve",
		"lib": [
			"dom",
			"esnext"
		],
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"strict": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": ["node_modules", "public", ".cache", "types"]
}
